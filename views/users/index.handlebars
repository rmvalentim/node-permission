<h1>Usuários</h1>
<a href="/users/new" class="btn btn-success mt-3">Novo Usuário</a>
<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>Nome de Usuário</th>
            <th>Nome Completo</th>
            <th>E-mail</th>
            <th>Editar</th>
            <th>Visualizar</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
            <tr>
                <td>{{username}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td><a href="/users/edit/{{id}}">Editar</a></td>
                <td><a href="/users/view/{{id}}">Visualizar</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>